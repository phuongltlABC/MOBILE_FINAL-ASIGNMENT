<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_2_100"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/custom_dialog_bg"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/avatar"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guest account"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/primary_1_100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in to edit your information"
                    android:textSize="14sp"
                    android:textColor="@color/primary_1_100" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imvEdit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit"
                android:contentDescription="Edit" />
        </LinearLayout>

        <!-- Section: General -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General"
            android:textStyle="bold"
            android:textColor="@color/primary_1_100"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_dialog_bg"
            android:elevation="4dp"
            android:paddingVertical="4dp"
            android:layout_marginBottom="16dp">

            <!-- Each row item -->
            <include layout="@layout/item_profile_row" />
            <include layout="@layout/item_profile_row" />
            <include layout="@layout/item_profile_row" />
            <include layout="@layout/item_profile_row" />
            <include layout="@layout/item_profile_row" />
            <include layout="@layout/item_profile_row" />
        </LinearLayout>

        <!-- Section: Supports -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supports"
            android:textStyle="bold"
            android:textColor="@color/primary_1_100"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_dialog_bg"
            android:elevation="4dp"
            android:paddingVertical="4dp">

            <include layout="@layout/item_profile_row" />
            <include layout="@layout/item_profile_row" />
            <include layout="@layout/item_profile_row" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
