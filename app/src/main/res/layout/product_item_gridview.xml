<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/product_item_bg"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    >
<ImageView
    android:id="@+id/imvPhoto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:padding="5dp"
    android:scaleType="centerInside"
    android:src="@drawable/produ_lamp"/>
    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Lexend.Body"
        android:textColor="@color/primary_1_100"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:text="Sản phẩm 1"
        android:textSize="14sp"

        />
    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Lexend.Price"
        android:textColor="@color/accent_1_100"
        android:fontFamily="@font/lexend_semi_bold"
        android:layout_marginTop="5dp"
        android:text="19.000 VND"
        />
</LinearLayout>